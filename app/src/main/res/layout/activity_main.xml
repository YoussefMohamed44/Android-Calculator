<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <ImageButton
        android:id="@+id/btn_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_backspace_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_top"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_del"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="56sp"
        android:gravity="end|bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/previous_expression"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/previous_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:alpha="0.7"
        android:textSize="32sp"
        android:gravity="end|bottom"
        app:layout_constraintBottom_toTopOf="@+id/guideline_top"
        app:layout_constraintTop_toBottomOf="@+id/result"
        tools:ignore="HardcodedText" />

    <!-- Row 1 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_C"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_medium"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_paren"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_paren"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="( )"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_medium"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn_C"
        app:layout_constraintEnd_toStartOf="@+id/btn_per"
        app:layout_constraintTop_toTopOf="@+id/btn_C"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_per"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="%"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_medium"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn_paren"
        app:layout_constraintEnd_toStartOf="@+id/btn_div"
        app:layout_constraintTop_toTopOf="@+id/btn_C"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_div"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="รท"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:background="@drawable/rounded_button_light"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn_per"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_C"
        android:layout_margin="8dp"/>

    <!-- Row 2 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintTop_toBottomOf="@+id/btn_C"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn8"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn7"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn8"
        app:layout_constraintEnd_toStartOf="@+id/btnX"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnX"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ร"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:background="@drawable/rounded_button_light"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn7"
        android:layout_margin="8dp"/>

    <!-- Row 3 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn4"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn5"
        app:layout_constraintTop_toBottomOf="@+id/btn7"
        app:layout_constraintBottom_toTopOf="@+id/btn1"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn_sub"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_sub"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:background="@drawable/rounded_button_light"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn4"
        android:layout_margin="8dp"/>

    <!-- Row 4 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintTop_toBottomOf="@+id/btn4"
        app:layout_constraintBottom_toTopOf="@+id/btn_geometric"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn1"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn2"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_plus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:background="@drawable/rounded_button_light"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn1"
        android:layout_margin="8dp"/>

    <!-- Row 5 -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_geometric"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Geo"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn_geometric"
        app:layout_constraintEnd_toStartOf="@+id/btn_dot"
        app:layout_constraintTop_toTopOf="@+id/btn_geometric"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dot"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textColor="@color/white"
        android:textSize="28sp"
        android:background="@drawable/rounded_button_dark"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn0"
        app:layout_constraintEnd_toStartOf="@+id/btn_res"
        app:layout_constraintTop_toTopOf="@+id/btn_geometric"
        android:layout_margin="8dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_res"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textColor="@color/white"
        android:textSize="32sp"
        android:background="@drawable/rounded_button_green"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/btn_dot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_geometric"
        android:layout_margin="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>